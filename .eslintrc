{
  "extends": "lifion",
  "overrides": [
    {
      "files": ["lib/index.test.js"],
      "rules": {
        "jest/no-export": ["warn"]
      }
    }
  ],
  "parserOptions": {
    "ecmaVersion": 2020
  },
  "rules": {
    "global-require": "off",
    "import/no-dynamic-require": "off",
    "no-console": "off",
    "no-process-exit": "off",
    "node/shebang": "off",
    "security/detect-child-process": "off",
    "security/detect-non-literal-require": "off"
  }
}
